}
#img_title {
  display: none;
  position: absolute;
  font-weight: bold;
  font-style: italic;
  text-shadow: 1px 1px 4px #dcdcdc;
  filter: dropshadow(color=#dcdcdc, offx=1, offy=1);
  text-align: right;
  top: 5px;
  right: 5px;
}
#offer_dropzone_image:hover #img_title {
  display: inline;
}
